<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="730dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    card_view:cardUseCompatPadding="true">

    <!-- A CardView that contains a TextView -->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        card_view:cardBackgroundColor="#BCA5EC"
        card_view:cardElevation="5dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="116dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:contentDescription="@string/speech_bubble"
            card_view:srcCompat="@android:drawable/sym_action_chat" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="110dp"
            android:fontFamily="monospace"
            android:text="Chat with AI"
            android:textSize="36sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        card_view:cardBackgroundColor="#A5D5EC"
        card_view:cardElevation="50dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="116dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:contentDescription="@string/star"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:fontFamily="monospace"
            android:text="Game Against AI"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        card_view:cardBackgroundColor="#DF6A7F">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="116dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="@string/eye" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="monospace"
            android:text="Image Recognition"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>